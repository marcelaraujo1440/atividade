{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, // Gatsby se encarrega disso
    "allowJs": true, // Permite arquivos JavaScript
    "isolatedModules": true // Necess√°rio para o Babel
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}