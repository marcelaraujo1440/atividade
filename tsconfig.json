{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true, 
    "allowJs": true,
    "isolatedModules": true 
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "public", ".cache"]
}